<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PageBackground"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <View
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background_day"
        android:backgroundTint="@color/base_color"
        android:id="@+id/top_view"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_remove_undo_bottomSheet_title"
        style="@style/Text"
        android:text="Remove Certificate"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/top_view"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/custom_remove_undo_bottomSheet_clearIcon"
        style="@style/IconTint"
        android:src="@drawable/outline_cancel_24"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/top_view"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_remove_undo_bottomSheet_confirmation_Button"
        android:text="Yes, I am sure"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_below="@+id/custom_remove_undo_bottomSheet_clearIcon"
        android:backgroundTint="@color/base_color"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="16dp"
        app:elevation="10dp"
        android:elevation="10dp"
        android:shadowColor="@color/base_color"
        android:outlineAmbientShadowColor="@color/base_color"
        android:outlineSpotShadowColor="@color/base_color"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_remove_undo_bottomSheet_cancel_Button"
        style="@style/Widget.Material3.Button.TextButton.ButtonBackground"
        android:text="No, Cancel"
        android:textSize="14sp"
        android:layout_below="@+id/custom_remove_undo_bottomSheet_confirmation_Button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="0dp"
        app:strokeWidth="1dp"
        />

</RelativeLayout>